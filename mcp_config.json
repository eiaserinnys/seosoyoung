{
  "seosoyoung-attach": {
    "type": "stdio",
    "command": "python",
    "args": ["-m", "seosoyoung.mcp"],
    "env": {
      "PYTHONPATH": "seosoyoung/src",
      "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
      "SLACK_CHANNEL": "${SLACK_CHANNEL}",
      "SLACK_THREAD_TS": "${SLACK_THREAD_TS}",
      "NPC_CLAUDE_API_KEY": "${NPC_CLAUDE_API_KEY}"
    }
  }
}
